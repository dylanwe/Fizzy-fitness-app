<%# save workout modal %> 
<div data-delete-modal tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 w-full md:inset-0 h-full bg-black bg-opacity-40">
    <div class="relative p-4 w-full max-w-md h-full md:h-auto mx-auto">
        <%# modal content %> 
        <div class="relative bg-white rounded-lg shadow">
            <button type="button" class="absolute top-3 right-2.5 text-slate-400 bg-transparent hover:bg-slate-200 hover:text-slate-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center" data-delete-modal-close>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>  
            </button>
            <div class="py-6 px-6 lg:px-8">
                <h3 class="mb-4 text-xl font-medium text-slate-900">Are you sure?</h3>
                <form class="space-y-6" action="#">
                    <button data-delete type="button" class="mt-2 w-full bg-red-500 rounded-lg hover:bg-red-400 transition-colors text-red-100 p-3 flex items-center justify-center">Delete workout</button>
                </form>
            </div>
        </div>
    </div>
</div> 